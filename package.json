{
  "name": "learn-persian",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.38",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "antd": "^5.15.3",
    "lottie-react": "^2.4.0",
    "persian-paradise-shared-types": "^1.0.0",
    "react": "^18.2.0",
    "react-awesome-reveal": "^4.2.8",
    "react-confetti": "^6.1.0",
    "react-dom": "^18.2.0",
    "react-query": "^3.39.3",
    "react-router-dom": "^6.14.2",
    "react-scripts": "5.0.1",
    "typescript": "^5.4.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --transformIgnorePatterns 'node_modules/(?!@codemirror)/'",
    "test:coverage": "yarn test -- --coverage --watchAll",
    "test-e2e": "cypress run --headless --browser chrome",
    "eject": "react-scripts eject",
    "lint": "eslint --fix",
    "pretty": "prettier --write .",
    "prepare": "husky install",
    "docker-build": "docker build -t persian-paradise .",
    "docker-run": "docker run -it -p 3000:3000 -v \"$(pwd)\"/src:/usr/src/app/src persian-paradise"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    },
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/reportWebVitals.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "npm run lint",
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@cypress/webpack-preprocessor": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "cypress": "^13.7.3",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.34.1",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5"
  }
}
